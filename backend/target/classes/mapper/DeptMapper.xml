<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="berryStreet.bluering.backend.mapper.DeptMapper">
    <resultMap type="Department" id="DeptResult">
        <id  property="id"  column="id"/>
        <result property="departmentName"   column="departmentName"/>
    </resultMap>

    <sql id="selectDeptVo">
        select d.id,d.departmentName
        from Department d
    </sql>

    <select id="selectDeptList" resultMap="DeptResult">
        <include refid="selectDeptVo"/>
        order by d.id
    </select>

    <select id="selectDeptById" parameterType="Int" resultMap="DeptResult">
		select d.id,d.departmentName
		from department d
		where d.id = #{departmentName}
	</select>

</mapper>
